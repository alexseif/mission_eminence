{% import 'macros/_links.html.twig' as links %}
<div class="card mb-4">
	{% if course.image %}
		<img src="{{ vich_uploader_asset(course, 'imageFile') }}" class="card-img-top" alt="{{ course.title }}">
	{% endif %}
	
	<div class="card-body">
	<div class="d-flex flex-wrap">
		<h5 class="card-title">{{ course.title }}</h5>
		<div class="ms-auto">
			<div class="btn-group btn-group-sm">
				{{ links.showEdit('admin_course', course.id)}}
			</div>
			<!-- .btn-group -->
		</div>
		<!-- .ms-auto -->
		</div>
		<p class="card-text">{{ course.description }}</p>
		
		{% if course.certificateTemplate %}
			<div class="mt-3">
				<h6>Certificate Template:</h6>
				<img src="{{ vich_uploader_asset(course, 'certificateTemplateFile') }}" 
					 alt="Certificate Template" class="img-fluid">
			</div>
		{% endif %}
		
		<div class="mt-3">
			<small class="text-muted">Day: {{ course.day }}</small>
			{% if course.locked %}
				<span class="badge bg-warning ms-2">Locked</span>
			{% endif %}
		</div>
	</div>
</div>
