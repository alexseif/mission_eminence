{% import 'macros/_links.html.twig' as links %}
<article class="card">

	<div class="card-header d-flex flex-wrap">
		<h1 class="card-title">{{ event.title }}</h1>
		<div class="ms-auto">
			<div class="btn-group btn-group-sm">
				{{ links.showEdit('admin_event', event.id)}}
			</div>
			<!-- .btn-group -->
		</div>
		<!-- .ms-auto -->
	</div>
	<!-- .card-header -->
	<div class="card-body">
		{{ event.description|raw }}
	</div>
	<!-- .card-body -->
	<div class="card-footer">
		<table class="table">
			<tbody>
				<tr>
					<th>Start</th>
					<td>{{ event.start|date }}</td>
				</tr>
				<tr>
					<th>End</th>
					<td>{{ event.end|date }}</td>
				</tr>
				<tr>
					<th>CreatedAt</th>
					<td>{{ event.createdAt ? event.createdAt|date : '' }}</td>
				</tr>
				<tr>
					<th>UpdatedAt</th>
					<td>{{ event.updatedAt ? event.updatedAt|date : '' }}</td>
				</tr>
			</tbody>
		</table>
	</div>
	<!-- .card-footer  -->
</article>
<!-- .card -->
