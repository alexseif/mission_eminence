{% extends 'admin/base.html.twig' %}
{% import 'macros/_links.html.twig' as links %}

{% block h1 %}Event
{% endblock %}
{% block cardActions %}
	<div>
		{{ links.back('admin_event_index') }}
		{{ links.edit('admin_event_edit', event.id) }}
		{{ include('admin/event/_delete_form.html.twig') }}
	</div>
{% endblock %}

{% block body %}
	{% include 'admin/event/_card.html.twig' %}
	<table class="table d-none">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ event.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ event.title }}</td>
			</tr>
			<tr>
				<th>Start</th>
				<td>{{ event.start ? event.start|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>End</th>
				<td>{{ event.end ? event.end|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ event.description }}</td>
			</tr>
		</tbody>
	</table>
{% endblock %}
