{% extends 'admin/base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
    <div class="row g-4">
        {# Students Widget #}
        <div class="col-md-4">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Students</h6>
                            <h2 class="mt-2 mb-0">{{ stats.students }}</h2>
                        </div>
                        <div class="fs-1">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-primary-dark">
                    <a href="{{ path('admin_user_index', {role: 'student'}) }}" class="text-white text-decoration-none">
                        View All Students <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        {# Courses Widget #}
        <div class="col-md-4">
            <div class="card bg-gold text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Total Courses</h6>
                            <h2 class="mt-2 mb-0">{{ stats.courses }}</h2>
                        </div>
                        <div class="fs-1">
                            <i class="fas fa-graduation-cap"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-secondary">
                    <a href="{{ path('admin_course_index') }}" class="text-white text-decoration-none">
                        View All Courses <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        {# Testimonials Widget #}
        <div class="col-md-4">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Testimonials</h6>
                            <h2 class="mt-2 mb-0">{{ stats.testimonials }}</h2>
                        </div>
                        <div class="fs-1">
                            <i class="fas fa-quote-right"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-success-dark">
                    <a href="{{ path('admin_testimonial_index') }}" class="text-white text-decoration-none">
                        View All Testimonials <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        {# Partnerships Widget #}
        <div class="col-md-4">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Partnerships</h6>
                            <h2 class="mt-2 mb-0">{{ stats.partnerships }}</h2>
                        </div>
                        <div class="fs-1">
                            <i class="fas fa-handshake"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-info-dark">
                    <a href="{{ path('admin_partnership_index') }}" class="text-white text-decoration-none">
                        View All Partnerships <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        {# MMM Widget #}
        <div class="col-md-4">
            <div class="card bg-warning text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">MMM Content</h6>
                            <h2 class="mt-2 mb-0">{{ stats.mmm }}</h2>
                        </div>
                        <div class="fs-1">
                            <i class="fas fa-file-alt"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-warning-dark">
                    <a href="{{ path('admin_mmm_index') }}" class="text-white text-decoration-none">
                        View All Content <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        {# Events Widget #}
        <div class="col-md-4">
            <div class="card bg-danger text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Events</h6>
                            <h2 class="mt-2 mb-0">{{ stats.events }}</h2>
                        </div>
                        <div class="fs-1">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-danger-dark">
                    <a href="{{ path('admin_event_index') }}" class="text-white text-decoration-none">
                        View All Events <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
