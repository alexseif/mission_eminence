{% extends 'admin/base.html.twig' %}

{% block h1 %}Partnership
{% endblock %}
{% block cardActions %}
	<a href="{{ path('app_partnership_index') }}" class="btn btn-green">back to list</a>
	<a href="{{ path('app_partnership_edit', {'id': partnership.id}) }}" class="btn btn-green">edit</a>
	{{ include('admin/partnership/_delete_form.html.twig') }}
{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-4">
			{% if partnership.link %}
				<a href="{{ partnership.link }}">
				{% endif %}
				<div class="card">
					<img class="card-img-top" src="{{ vich_uploader_asset(partnership) }}" alt="{{ partnership.name}}">
					<div class="card-header">
						<h1 class="card-title">{{ partnership.name }}</h1>
					</div>
					<!-- .card-header -->
					<div class="card-body">
						{{ partnership.description|raw }}
					</div>
					<!-- .card-body -->
					<div class="card-footer">
						<table class="table">
							<tbody>
								<tr>
									<th>Link</th>
									<td>{{ partnership.link }}</td>
								</tr>
								<tr>
									<th>CreatedAt</th>
									<td>{{ partnership.createdAt ? partnership.createdAt|date('Y-m-d H:i:s') : '' }}</td>
								</tr>
								<tr>
									<th>UpdatedAt</th>
									<td>{{ partnership.updatedAt ? partnership.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
								</tr>
							</tbody>
						</table>
					</div>
					<!-- .card-footer  -->
				</div>
				<!-- .card -->
				{% if partnership.link %}
				</a>
			{% endif %}
		</div>
		<!-- .col-4 -->
		<div class="col"></div>
		<!-- .col -->
	</div>
	<!-- .row -->
{% endblock %}
