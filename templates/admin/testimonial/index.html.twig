{% extends 'admin/base.html.twig' %}

{% block h1 %}Testimonial
{% endblock %}
{% block cardActions %}
	<a href="{{ path('app_testimonial_new') }}" class="btn btn-green">Create new</a>
{% endblock %}
{% block body %}
	<table class="table">
		<thead>
			<tr>
				<th>Testimonial</th>
				<th>Alt</th>
				<th>CreatedAt</th>
				<th>UpdatedAt</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for testimonial in testimonials %}
				<tr>
					<td>
						<figure>
							<img src="{{ vich_uploader_asset(testimonial) }}" alt="{{ testimonial.alt }}" height="150"/>
							<figcaption>
								{{ testimonial.testimonial }}
							</figcaption>
						</figure>
					</td>
					<td>{{ testimonial.alt }}</td>
					<td>{{ testimonial.createdAt ? testimonial.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ testimonial.updatedAt ? testimonial.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_testimonial_show', {'id': testimonial.id}) }}" class="btn btn-green">show</a>
						<a href="{{ path('app_testimonial_edit', {'id': testimonial.id}) }}" class="btn btn-green">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
