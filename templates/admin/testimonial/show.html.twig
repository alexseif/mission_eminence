{% extends 'admin/base.html.twig' %}

{% block h1 %}Testimonial
{% endblock %}
{% block cardActions %}
	<a href="{{ path('app_testimonial_index') }}" class="btn btn-green">back to list</a>
	<a href="{{ path('app_testimonial_edit', {'id': testimonial.id}) }}" class="btn btn-green">edit</a>
	{{ include('admin/testimonial/_delete_form.html.twig') }}
{% endblock %}
{% block body %}
	<figure>
		<img src="{{ vich_uploader_asset(testimonial) }}" alt="{{ testimonial.alt}}" class="img-fluid" />
		<figcaption>
			{{ testimonial.alt }}
		</figcaption>
	</figure>
	<table class="table">
		<tbody>
			<tr>
				<th>CreatedAt</th>
				<td>{{ testimonial.createdAt ? testimonial.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>UpdatedAt</th>
				<td>{{ testimonial.updatedAt ? testimonial.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

{% endblock %}
