{% extends 'base.html.twig' %}
{# TODO: revise this #}
{% block title %}Reset Password
{% endblock %}

{% block body %}
	<div class="container" id="registration">
		<div class="registration-form w-50 mx-auto">
			<div class="card border-1 border-gold text-gold">
				<div class="card-header border-1 border-gold">
					<h1 class="card-title">Reset Password</h1>
				</div>
				<form method="post">
					<div class="card-body">
						{% if error is defined %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						{% if app.user %}
							<div class="mb-3">
								You are logged in as
								{{ app.user.userIdentifier }},
								<a href="{{ path('app_logout') }}">Logout</a>
							</div>
						{% endif %}

						<h1 class="h3 mb-3 font-weight-normal">Please enter a new password</h1>
						<label for="planPassword">Password</label>
						<input type="password" value="" name="_plainPassword" id="plainPassword" class="form-control" autocomplete="email" required autofocus>
						<label for="password">Confirm Password</label>
						<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
						<input
						type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					{#
															                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
															                        See https://symfony.com/doc/current/security/remember_me.html
															            
															                        <div class="checkbox mb-3">
															                            <input type="checkbox" name="_remember_me" id="_remember_me">
															                            <label for="_remember_me">Remember me</label>
															                        </div>
															                    #}
					</div>
					<!-- /.card-body -->
					<div class="card-footer">
						<button class="btn btn-eminence" type="submit">
							Sign in
						</button>
					</form>
				</div>
				<!-- /.card-footer -->
			</div>
			<!-- /.card -->
		</div>
		<!-- /.registratio-form -->
	</div>
	<!-- /#registration -->
{% endblock %}
